<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="l1zzy.formulas.Math">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout"
        android:textAlignment="gravity"
        android:gravity="left">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Algebra"
            android:id="@+id/algebra"
            android:gravity="left"
            android:textSize="20sp"
            android:enabled="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Area"
            android:id="@+id/area"
            android:gravity="left"
            android:enabled="true"
            android:textSize="20sp"
            android:clickable="true"
            android:onClick="areaClicked"
            android:visibility="visible" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Perimeter/Circumference"
            android:id="@+id/perimeter"
            android:gravity="left"
            android:enabled="true"
            android:textSize="20sp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Surface Area"
            android:id="@+id/surfacearea"
            android:textSize="20sp"
            android:enabled="true"
            android:gravity="left" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:id="@+id/volume"
            android:textSize="20dp"
            android:layout_gravity="left"
            android:enabled="true"
            android:clickable="true"
            android:gravity="left" />

    </LinearLayout>
</RelativeLayout>
